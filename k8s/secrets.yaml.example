apiVersion: v1
kind: Secret
metadata:
  name: holiday-analyzer-secrets
  namespace: holiday-analyzer
type: Opaque
stringData:
  POSTGRES_PASSWORD: "YOUR_POSTGRES_PASSWORD_HERE"
  JWT_SECRET: "YOUR_JWT_SECRET_HERE"
  CLOUD_SQL_CONNECTION_NAME: "YOUR_PROJECT_ID:YOUR_REGION:YOUR_INSTANCE_NAME"

# Instructions:
# 1. Copy this file to secrets.yaml: cp secrets.yaml.example secrets.yaml
# 2. Replace the placeholder values with your actual secrets
# 3. Never commit secrets.yaml to Git (it's in .gitignore)
# 
# To generate a secure JWT secret, use:
# openssl rand -base64 64
