# Environment Variables Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env file to git (it's in .gitignore)

# ======================
# Application Profile
# ======================
# Options: dev, prod
SPRING_PROFILES_ACTIVE=dev

# ======================
# Server Configuration
# ======================
SERVER_PORT=8080

# ======================
# Database Configuration
# ======================
# PostgreSQL connection details
DB_URL=jdbc:postgresql://localhost:5432/holidays
DB_USERNAME=postgres
DB_PASSWORD=password

# ======================
# Frontend Configuration
# ======================
# API endpoint for frontend
VITE_API_BASE_URL=http://localhost:8080

# ======================
# Docker Configuration
# ======================
# Used by docker-compose.yml
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=holidays

# ======================
# Production Settings (Cloud Deployment)
# ======================
# Uncomment and set these for production deployment
# SPRING_PROFILES_ACTIVE=prod
# DB_URL=jdbc:postgresql://your-cloud-db-host:5432/holidays
# DB_USERNAME=your-prod-username
# DB_PASSWORD=your-secure-password
# SERVER_PORT=8080
